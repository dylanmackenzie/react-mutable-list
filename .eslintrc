---
extends: "eslint:recommended"
plugins:
    - react
ecmaFeatures:
    jsx: true
    modules: true
env:
    es6: true
    browser: true
rules:

# Possible Errors
    comma-dangle: [2, always-multiline]

# Best Practices
    consistent-return: 2
    complexity: [2, 10]
    curly: 2
    dot-notation: 2
    eqeqeq: [2, smart]
    guard-for-in: 2
    no-return-assign: 2
    no-caller: 2
    no-else-return: 2
    no-extra-bind: 2
    no-loop-func: 2
    no-useless-call: 2
    no-throw-literal: 2
    no-return-assign: 2
    no-unused-expressions: 2
    no-warning-comments: [1, { terms: [ todo ], location: start }]
    no-with: 2
    radix: 2

# Variables
    init-declarations: 1
    no-undef-init: 2
    no-undefined: 2
    no-unused-vars: [2, { args: all, argsIgnorePattern: "^_" }]
    no-use-before-define: 0

# Stylistic Issues
    array-bracket-spacing: 2
    block-spacing: 2
    brace-style: 2
    camelcase: 2
    comma-spacing: 2
    computed-property-spacing: 2
    no-multiple-empty-lines: 2
    indent: [2, 2]
    new-cap: 2
    no-lonely-if: 2
    object-curly-spacing: [2, always]
    operator-assignment: [2, always]
    padded-blocks: [2, never]
    sort-vars: 2
    space-after-keywords: [2, always]
    space-before-function-paren: [2, { anonymous: always, named: never }]
    space-in-parens: [2, never]
    space-return-throw-case: 2
    spaced-comment: [2, always]
    quotes: [2, single]
    semi: [2, never]

# ES6
    accessor-pairs: 2
    arrow-parens: [2, as-needed]
    arrow-spacing: 2
    constructor-super: 2
    no-class-assign: 2
    no-const-assign: 2
    no-dupe-class-members: 2
    no-this-before-super: 2
    no-var: 2
    object-shorthand: 1
    prefer-arrow-callback: 1
    prefer-const: 1
    prefer-spread: 1
    prefer-template: 1

# vim:ft=yaml
